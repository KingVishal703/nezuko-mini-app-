<body>
  <div class="card">
    <div class="step-text" id="step-info">PERMANENT LINK</div>
    <h1 id="title-main">Nezuko permanent link</h1>
    <p class="sub" id="sub-text">
      Kripya <b>timer khatm hone</b> tak is page ko band na karein.
    </p>

    <div class="circle">
      <span id="seconds">10</span>
    </div>

    <div class="label" id="label-text">
      Timer complete hote hi aapko Telegram bot par le jaya jayega.
    </div>

    <div class="hint" id="hint-text">
      Ye Nezuko ka permanent link hai. Timer ke baad aapka bot automatically open ho jayega.
    </div>

    <div class="progress">
      <div class="progress-inner" id="progress-inner"></div>
    </div>

    <div class="status" id="status-text">
      Redirect ready ho raha hai...
    </div>
  </div>

  <script>
    // ======== BASIC CONFIG ========
    const WAIT_SECONDS = 2;                   // kitne second wait karna hai
    const BOT_USERNAME = "Xnezukochan_bot";    // without @
    const USE_PREFIX = false;                  // permanent link => false
    const BOT_START_PREFIX = "blg2";           // ignore hoga agar USE_PREFIX=false

    const secondsEl = document.getElementById("seconds");
    const progressInner = document.getElementById("progress-inner");
    const statusText = document.getElementById("status-text");
    const labelText = document.getElementById("label-text");

    // URL se payload (id)
    const urlParams = new URLSearchParams(window.location.search);
    const payload = urlParams.get("id") || "";

    if (!payload) {
      statusText.textContent = "âŒ Invalid link. Kripya bot se naya link lein.";
      labelText.textContent = "Redirect cancel ho gaya.";
    }

    let left = WAIT_SECONDS;
    const total = WAIT_SECONDS;
    secondsEl.textContent = left.toString();

    function updateProgress() {
      const done = Math.max(0, Math.min(total, total - left));
      const perc = total > 0 ? (done / total) * 100 : 100;
      progressInner.style.width = perc + "%";
    }

    updateProgress();

    const timer = setInterval(() => {
      if (!payload) {
        clearInterval(timer);
        return;
      }

      left--;
      if (left <= 0) {
        left = 0;
        clearInterval(timer);
        secondsEl.textContent = "0";
        updateProgress();
        statusText.textContent = "Redirecting to Telegram...";
        labelText.textContent = "Aapko bot par bheja ja raha hai.";

        // redirect
        let startParam;
        if (USE_PREFIX) {
          startParam = BOT_START_PREFIX + payload;
        } else {
          startParam = payload;
        }

        const finalUrl =
          "https://t.me/" +
          BOT_USERNAME +
          "?start=" +
          encodeURIComponent(startParam);

        window.location.href = finalUrl;
        return;
      }

      secondsEl.textContent = left.toString();
      updateProgress();
    }, 1000);
  </script>
</body>
